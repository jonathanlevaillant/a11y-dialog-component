{
  "extends": "airbnb-base",
  "globals": {
    "document": true,
    "window": true,
    "MutationObserver": true
  },
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "no-unused-expressions": [2, { "allowTernary": true }],
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "no-console": [2, { "allow": ["warn"] }],
    "max-len": [1, { "code": 120 }],
    "no-shadow": [1],
    "func-names": [0],
    "linebreak-style": [0]
  }
}
